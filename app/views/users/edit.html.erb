<body class="settings">
  <%= render "layouts/nav" %>
  <main>
    <section class="left">
      <div class="title">Account Settings</div>
      <%= form_for(@user) do |form| %>
        <%= form.label :first_name %>
        <%= form.text_field :first_name %>
        <%= form.label :last_name %>
        <%= form.text_field :last_name %>
        <%= form.label :email, "Email address" %>
        <%= form.email_field :email %>
        <%= form.label :password, "Password (leave blank if you don't want to change it)" %>
        <%= form.password_field :password %>
        <%= form.label :password_confirmation, "Confirm your password" %>
        <%= form.password_field :password_confirmation %>
        <%= form.submit "Save changes" %>
      <% end %>
    </section>
    <section class="right">
      <div class="title">Delete Account</div>
      <div class="note">
        Note: This is irreversible.<br>You may lose your data including your posts.
      </div>
      <%= link_to "Continue to account deletion",
      @user,
      data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      },
      class: "delete-account" %>
    </section>
  </main>
</body>
