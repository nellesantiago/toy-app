<% if current_user == @user %>
  <h1>
    Hello,
    <%= @user.first_name %>
  </h1>
<% else %>
  <h1>
    <%= @user.first_name %>'s Posts</h1>
<% end %>
<br>

<% @posts.each do | post | %>
  <li>
    <%= avatar_for(post.user)%>
    Title:
    <%= post.title %><br>
    Description:
    <%= post.description %><br>
    <% if post.images.attached? %>
    <% post.images.each do | image |%>
    <%= image_tag(image, style: "width: 300px") %>
    <% end %>
    <% end %><br>
    <% if current_user == @user %>
    <%= link_to "Edit", edit_user_post_path(post.user_id, post) %>
    <%= link_to "Delete",
    [current_user, post],
    data: {
      turbo_method: :delete,
      turbo_confirm: "Delete post?"
    } %><% end %>
    <br><br>
  </li>
<% end %>

<% if current_user == @user %>
<%= link_to "Add Post", new_user_post_path(current_user) %><br>
<%= link_to "Feed", feed_path %><br>
<%= link_to "All Users", users_path %><br>
<%= link_to "Settings", edit_user_path(current_user)%><br>
<%= link_to "Log out", logout_path, data: { turbo_method: :delete } %>
<% end %>