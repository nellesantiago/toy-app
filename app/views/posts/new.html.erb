<%= turbo_frame_tag "add_new_post" do %>
  <div class="post-modal">
    <div class="post-container">
      <h1>Add New Toy</h1>
      <%= form_for @post, url: user_posts_path(current_user) do |form| %>
        <div class="field">
          <%= form.text_field :title, placeholder: "Title" %>
        </div>
        <div class="field">
          <%= form.text_field :description, placeholder: "Description" %>
        </div>
        <div class="field">
          <%= form.file_field :append_images,
                          multiple: true,
                          accept: "image/jpeg, image/png, image/gif, image/webp" %>

        </div>
        <div class="actions">
          <%= form.submit "Create Toy" %>
        </div>
        <%= link_to "Close", user_posts_path(current_user), class: "close" %>
      <% end %>
    </div>
  </div>
<% end %>
