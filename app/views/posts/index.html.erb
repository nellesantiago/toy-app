<h1>Hello, <%= @current_user.first_name %>   </h1>

<table>
<tr>
    <th>Title</th>
    <th>Description</th>
</tr>
<% @posts.each do |post| %>
<tr> 
    <td> <%= post.title %> </td>
    <td> <%= post.description %> </td>
    <td> <%= link_to "Edit", edit_user_post_path(current_user, post)%></td>
    <td><%= link_to "Delete", [current_user, post], data: {turbo_method: :delete, turbo_confirm: "Delete post?"}  %>
</td>
</tr>
<%end %>
</table>

<br>

<%= link_to "Add Post", new_user_post_path(current_user) %>
<%= link_to "Settings", edit_user_path(current_user) %>
<%= link_to "Log out", logout_path, data: {turbo_method: :delete} %>

