<%= turbo_frame_tag "edit_post" do %>
  <div class="post-modal">
    <div class="post-container">
      <h1>Edit Toy</h1>
      <%= form_for([@user, @post]) do |form| %>
        <div class="field">
          <%= form.label :title %>
          <%= form.text_field :title, placeholder: "Title" %>
        </div>
        <div class="field">
          <%= form.label :description %>
          <%= form.text_field :description, placeholder: "Description" %>
          <%= form.file_field :append_images, multiple: true, accept: "image/jpeg, image/png, image/gif, image/webp" %>
            <div class="image-box">
          <% @post.images.each do |image| %>
            <% if image.persisted? %>
            <%= turbo_frame_tag image do %>
            <div class="image-container">
              <%= image_tag image %>
              <%= link_to attachment_path(image), data: { turbo_method: "delete", turbo_confirm: "Remove attachment?"} do%>
              <i class="fa-solid fa-circle-xmark"></i>
              <% end %>
            </div>
            <% end %>
            <% end %>
          <% end %>
            </div>
        </div>
        <div class="actions">
          <%= form.submit "Update Toy" %>
        </div>
        <%= link_to "Close", :back, class: "close" %>
      <% end %>
    </div>
  </div>
<% end %>
