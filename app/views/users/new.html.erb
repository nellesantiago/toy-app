<body class="signup-page">
  <main>
    <section class="left">
      <img src="https://www.linkpicture.com/q/rb.png">
    </section>
    <section class="right">
      <div class="form">
        <div class="greetings">
          Hello!<br>
          Get started now.
        </div>
        <div class="text">
          Already have an account?
          <%= link_to "Log in", login_path %>
        </div>
        <%= form_for(@user) do |form| %>
          <%= render "shared/error_messages", object: @user %>
          <div class="field">
            <%= form.text_field :first_name, placeholder: "First Name" %>
          </div>
          <div class="field">
            <%= form.text_field :last_name, placeholder: "Last Name" %>
          </div>
          <div class="field">
            <%= form.email_field :email, placeholder: "Email Address" %>
          </div>
          <div class="field">
            <%= form.password_field :password, placeholder: "Password (minimum 6 characters)" %>
          </div>
          <div class="field">
            <%= form.password_field :password_confirmation, placeholder: "Confirm Password" %>
          </div>
          <div class="actions">
            <%= form.submit "Sign up" %>
          </div>
        <% end %>
      </div>
      <%= link_to "< Back to home", root_path, class: "back" %>
    </section>
  </main>
</body>
